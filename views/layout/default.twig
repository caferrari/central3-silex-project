<html>
    <head>
        <title>{{ site.nome }}</title>
        <!--[if lt IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.2/html5shiv.js"></script><![endif]-->
        <link href="//cdnjs.cloudflare.com/ajax/libs/960gs/0/960.css" rel="stylesheet" media="screen" />
        <link href="{{ app.request.baseUrl }}/css/styles.css" rel="stylesheet" media="screen" />
        <link href="//cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.4/jquery.fancybox.css" rel="stylesheet" type="text/css" media="screen" />
        <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.2/html5shiv.js" type="text/javascript"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.2/jquery.min.js" type="text/javascript"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.4/jquery.fancybox.pack.js" type="text/javascript"></script>
        <script src="{{ app.request.baseUrl }}/js/jquery.scroll4ever.js" type="text/javascript"></script>
        <script src="{{ app.request.baseUrl }}/js/scripts.js" type="text/javascript"></script>
    </head>
    <body>
        <script type="text/javascript" charset="utf-8" src="http://barra.to.gov.br/topo.js?k={{ app.request.host }}"></script>
        <div class="container_12">
            <nav class="grid_3">
                <a href="{{ app.request.baseUrl }}">Inicio</a>
                <a href="{{ app.request.baseUrl }}/noticia">Noticias</a>
                <a href="{{ app.request.baseUrl }}/galeria">Galerias</a>
                {% for item in menu %}
                <a href="{{ app.request.baseUrl ~ item.uri }}">{{ item.titulo }}</a>
                {% endfor %}
                <a href="{{ app.request.baseUrl }}/mapa">Mapa do Site</a>
            </nav>
            <div id="content" class="grid_6 {{ app.request.attributes.get('_route')|replace({'.':' '}) }}">
            {% block content %}
            {% endblock %}
            </div>
            <sidebar class="grid_3">
                <script src="http://publicidade.to.gov.br/pub.php" type="text/javascript"></script>
                {% for banner in banners %}
                {{ banner.code|resize(190)|raw }}
                {% endfor %}
            </sidebar>
        </div>
        <script type="text/javascript" charset="utf-8" src="http://barra.to.gov.br/base.js?k={{ app.request.host }}"></script>
    </body>
</html>